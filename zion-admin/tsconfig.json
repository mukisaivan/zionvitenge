{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/page.tsx", "app/page.js", "app/api/auth/[...nextauth].jsx", "lib/mongodb.js", "lib/mongodb.jsx", "app/api/auth/[...nextauth]/route.js", "lib/auth.js", "app/layout.jsx", "lib/ZionLogo.tsx", "app/home/layout.jsx"],
  "exclude": ["node_modules"]
}
